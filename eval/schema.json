{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "earSectionId": {
      "description": "Canonical EAR section citation id (see docs/identifier_policy.md). Example: EAR-736.2(b)",
      "minLength": 1,
      "pattern": "^EAR-\\d{3}(?:\\.\\d+[a-z0-9]*)+(?:\\([a-z0-9]+\\))*$",
      "type": "string"
    },
    "earDocId": {
      "description": "EAR identifier used as an evidence doc_id. Allows part-only ids (EAR-736), canonical section ids, and optional stable suffixes (e.g. #p0001).",
      "minLength": 1,
      "pattern": "^EAR-\\d{3}(?:\\.\\d+[a-z0-9]*)*(?:\\([a-z0-9]+\\))*(?:#[a-z0-9][a-z0-9:._-]{0,200})?$",
      "type": "string"
    },
    "earSpanId": {
      "description": "Evidence span locator. Accepts either a canonical EAR section id or a section-local id without the EAR- prefix (e.g. 736.2(b)).",
      "minLength": 1,
      "pattern": "^(?:EAR-)?\\d{3}(?:\\.\\d+[a-z0-9]*)+(?:\\([a-z0-9]+\\))*$",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "properties": {
    "ear_sections": {
      "items": {
        "$ref": "#/definitions/earSectionId"
      },
      "type": "array"
    },
    "evidence": {
      "additionalProperties": false,
      "properties": {
        "doc_spans": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "doc_id": {
                "$ref": "#/definitions/earDocId"
              },
              "span_id": {
                "$ref": "#/definitions/earSpanId"
              }
            },
            "required": [
              "doc_id",
              "span_id"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "kg_nodes": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "type": "array"
        },
        "kg_paths": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "doc_spans",
        "kg_nodes"
      ],
      "type": "object"
    },
    "expected": {
      "additionalProperties": false,
      "properties": {
        "citations": {
          "items": {
            "$ref": "#/definitions/earSectionId"
          },
          "type": "array"
        },
        "label": {
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "label",
        "citations"
      ],
      "type": "object"
    },
    "ground_truth": {
      "additionalProperties": false,
      "properties": {
        "answer_text": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      },
      "required": [
        "answer_text",
        "label"
      ],
      "type": "object"
    },
    "id": {
      "minLength": 1,
      "type": "string"
    },
    "kg_entities": {
      "items": {
        "minLength": 1,
        "type": "string"
      },
      "type": "array"
    },
    "notes": {
      "type": "string"
    },
    "question": {
      "minLength": 1,
      "type": "string"
    },
    "task": {
      "minLength": 1,
      "type": "string"
    }
  },
  "required": [
    "id",
    "task",
    "question",
    "ground_truth",
    "ear_sections",
    "kg_entities",
    "evidence"
  ],
  "title": "EAR Evaluation Item",
  "type": "object"
}
