{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "ear_sections": {
      "items": {
        "minLength": 1,
        "type": "string"
      },
      "type": "array"
    },
    "evidence": {
      "additionalProperties": false,
      "properties": {
        "doc_spans": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "doc_id": {
                "minLength": 1,
                "type": "string"
              },
              "span_id": {
                "minLength": 1,
                "type": "string"
              }
            },
            "required": [
              "doc_id",
              "span_id"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "kg_nodes": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "type": "array"
        },
        "kg_paths": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "doc_spans",
        "kg_nodes"
      ],
      "type": "object"
    },
    "expected": {
      "additionalProperties": false,
      "properties": {
        "citations": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "type": "array"
        },
        "label": {
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "label",
        "citations"
      ],
      "type": "object"
    },
    "ground_truth": {
      "additionalProperties": false,
      "properties": {
        "answer_text": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      },
      "required": [
        "answer_text",
        "label"
      ],
      "type": "object"
    },
    "id": {
      "minLength": 1,
      "type": "string"
    },
    "kg_entities": {
      "items": {
        "minLength": 1,
        "type": "string"
      },
      "type": "array"
    },
    "notes": {
      "type": "string"
    },
    "question": {
      "minLength": 1,
      "type": "string"
    },
    "task": {
      "minLength": 1,
      "type": "string"
    }
  },
  "required": [
    "id",
    "task",
    "question",
    "ground_truth",
    "ear_sections",
    "kg_entities",
    "evidence"
  ],
  "title": "EAR Evaluation Item",
  "type": "object"
}
